{
  "name": "VK App Helper",
  "version": "0.0.1",
  "manifest_version": 2,

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon-19.png"
    }
  },

  "icons": {
     "16": "img/icon-16.png",
     "48": "img/icon-48.png",
     "128": "img/icon-128.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
